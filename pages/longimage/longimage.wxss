/* pages/longimage/longimage.wxss - Apple Style */

.container {
  min-height: 100vh;
  background: var(--background-color);
  display: flex;
  flex-direction: column;
}

/* 功能控制区域 */
.function-area {
  background: var(--surface-color);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  max-height: 40vh;
  overflow-y: auto;
  padding: var(--spacing-md);
}

/* 滚动条样式 */

/* 预览区域 */
.preview-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-lg);
  gap: var(--spacing-lg);
  overflow: hidden;
}

/* 画布容器 - 苹果风格 */
.canvas-container {
  position: relative;
  width: 100%;
  min-height: 300px;
  background: var(--surface-color);
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-medium);
  overflow: hidden;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  max-width: 100%;
  max-height: 50vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.canvas-container:hover {
  box-shadow: var(--shadow-heavy);
  transform: translateY(-4rpx);
}

.canvas {
  display: block !important;
  max-width: 100%;
  max-height: 100%;
  border-radius: var(--radius-large);
  background: #fff;
  visibility: visible !important;
  opacity: 1 !important;
}

.empty-tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: var(--text-secondary);
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  padding: var(--spacing-xl);
  background: rgba(255, 255, 255, 0.9);
  border-radius: var(--radius-medium);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  z-index: 1;
  pointer-events: none;
  white-space: nowrap;
}

/* 按钮组 - 苹果风格 */
.layout-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-md);
}

.layout-buttons .btn {
  flex: 1;
  min-width: 140rpx;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  gap: var(--spacing-lg);
  margin-top: var(--spacing-sm);
}

.radio-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  cursor: pointer;
  padding: var(--spacing-sm);
  border-radius: var(--radius-medium);
  transition: all 0.2s ease;
}

.radio-item:active {
  background: rgba(0, 122, 255, 0.1);
}

.radio-item radio {
  transform: scale(1.2);
}

/* 颜色输入 */
.color-input {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-medium);
  background: var(--surface-color);
  transition: all 0.2s ease;
}

.color-input:active {
  transform: scale(0.95);
  border-color: var(--primary-color);
}

/* 导出按钮组 */
.export-buttons {
  display: flex;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-md);
  width: 100%;
}

.export-buttons .btn {
  flex: 1;
}

/* 已选图片列表 - 苹果风格 */
.selected-images {
  width: 100%;
  max-height: 30vh;
  overflow-y: auto;
  padding: var(--spacing-md);
  background: rgba(255, 255, 255, 0.8);
  border-radius: var(--radius-large);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-top: var(--spacing-md);
}

/* 滚动条样式 */

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
  justify-content: center;
  margin-top: var(--spacing-sm);
}

.image-item {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  border-radius: var(--radius-medium);
  overflow: hidden;
  background: var(--surface-color);
  box-shadow: var(--shadow-light);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.image-item:hover {
  transform: scale(1.05);
  box-shadow: var(--shadow-medium);
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 图片控制按钮 */
.image-controls {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.control-btn {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: #FFFFFF;
  border-radius: var(--radius-small);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  box-shadow: var(--shadow-medium);
  border: 2rpx solid var(--surface-color);
  transition: all 0.2s ease;
}

.control-btn:active {
  transform: scale(0.9);
}

.remove-btn {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #FF3B30 0%, #D70015 100%);
  color: #FFFFFF;
  border-radius: var(--radius-small);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  box-shadow: var(--shadow-medium);
  border: 2rpx solid var(--surface-color);
  transition: all 0.2s ease;
}

.remove-btn:active {
  transform: scale(0.9);
}

/* 图片序号 */
.image-index {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 100%);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: var(--radius-small);
  line-height: 1;
  box-shadow: var(--shadow-light);
}

/* 滑块优化 */
slider {
  flex: 1;
  margin: 0 var(--spacing-md);
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .function-area {
    max-height: 45vh;
    padding: var(--spacing-md);
  }
  
  .preview-area {
    padding: var(--spacing-md);
  }
  
  .canvas-container {
    max-height: 40vh;
  }
  
  .selected-images {
    max-height: 25vh;
  }
  
  .image-item {
    width: 120rpx;
    height: 120rpx;
  }
  
  .control-btn, .remove-btn {
    width: 40rpx;
    height: 40rpx;
    font-size: 20rpx;
  }
  
  .image-index {
    font-size: 20rpx;
    padding: 4rpx 8rpx;
  }
  
  .layout-buttons .btn {
    min-width: 120rpx;
    font-size: 28rpx;
  }
}

/* 动画效果 */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.image-item {
  animation: slideIn 0.3s ease-out;
}

/* 半透明效果 */
.glass-effect {
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}
