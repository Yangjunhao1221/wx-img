/* pages/profile/profile.wxss - Apple Style */

.container {
  min-height: 100vh;
  background: var(--background-color);
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: var(--spacing-lg);
  border-radius: var(--radius-large);
  padding: var(--spacing-xl);
  display: flex;
  align-items: center;
  box-shadow: var(--shadow-medium);
  color: white;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: var(--spacing-lg);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
}

.user-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

/* 统计数据区域 */
.stats-section {
  margin: 0 var(--spacing-lg) var(--spacing-lg);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-lg);
  padding-left: var(--spacing-sm);
}

.stats-grid {
  background: var(--surface-color);
  border-radius: var(--radius-large);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-light);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.stat-time {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--primary-color);
  text-align: center;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: center;
}

/* 功能列表 */
.features-section {
  margin: 0 var(--spacing-lg) var(--spacing-lg);
}

.features-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.feature-item {
  background: var(--surface-color);
  border-radius: var(--radius-large);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-light);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.feature-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-medium);
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: var(--spacing-lg);
  flex-shrink: 0;
}

.feature-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.feature-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.feature-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.coming-soon {
  font-size: 20rpx;
  color: #ff9500;
  background: #fff3e0;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.feature-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.feature-description {
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 1.4;
}

.feature-arrow {
  font-size: 32rpx;
  color: var(--text-tertiary);
  font-weight: bold;
  margin-left: var(--spacing-md);
  opacity: 0.6;
}

/* 其他操作 */
.actions-section {
  margin: 0 var(--spacing-lg);
}

.action-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.action-item {
  background: var(--surface-color);
  border-radius: var(--radius-large);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-light);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.action-item:active {
  transform: scale(0.98);
}

.action-item.danger {
  border-color: rgba(255, 59, 48, 0.2);
}

.action-item.danger:active {
  background: rgba(255, 59, 48, 0.05);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--radius-medium);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: var(--spacing-lg);
  background: rgba(255, 59, 48, 0.1);
}

.action-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff3b30;
}

.action-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}
