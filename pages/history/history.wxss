/* pages/history/history.wxss - Apple Style */

.container {
  min-height: 100vh;
  background: var(--background-color);
  padding-bottom: 40rpx;
}

/* 头部操作栏 */
.header {
  background: var(--surface-color);
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.items-count {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.header-actions {
  display: flex;
  gap: var(--spacing-sm);
  align-items: center;
}

/* 编辑模式操作栏 */
.edit-actions {
  background: #f8f9ff;
  padding: var(--spacing-md) var(--spacing-lg);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.edit-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.selected-count {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.edit-right {
  display: flex;
  gap: var(--spacing-sm);
}

/* 历史记录列表 */
.history-list {
  padding: var(--spacing-md) var(--spacing-lg);
}

.history-item {
  background: var(--surface-color);
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-light);
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-lg);
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

.history-item.editing {
  padding-left: 100rpx;
}

/* 选择框 */
.item-selector {
  position: absolute;
  left: var(--spacing-lg);
  top: 50%;
  transform: translateY(-50%);
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 4rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: var(--primary-color);
  border-color: var(--primary-color);
}

.checkmark {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 预览图 */
.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-medium);
  overflow: hidden;
  margin-right: var(--spacing-lg);
  position: relative;
  flex-shrink: 0;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 8rpx 12rpx;
}

.image-type {
  color: white;
  font-size: 20rpx;
  font-weight: 500;
}

/* 项目信息 */
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.3;
}

.item-details {
  display: flex;
  gap: var(--spacing-sm);
  align-items: center;
}

.item-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.item-count {
  font-size: 24rpx;
  color: var(--text-tertiary);
  padding-left: var(--spacing-sm);
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);
}

/* 操作按钮 */
.item-actions {
  display: flex;
  gap: var(--spacing-xs);
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: var(--primary-color);
  color: white;
  border: none;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx var(--spacing-lg);
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xl);
}

.empty-actions {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  width: 100%;
  max-width: 400rpx;
}

/* 按钮尺寸 */
.btn-sm {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  min-width: auto;
}
